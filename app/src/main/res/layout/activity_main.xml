<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="900dp"

            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/Payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="สแกนเพื่อโอนเข้าบัญชี"
                    android:textColor="#00165C"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="24dp"
                    app:srcCompat="@drawable/ic_picture" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:text="Tap to Select Image"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_upload"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0"
                    android:backgroundTint="#161D6F"
                    android:padding="10dp"
                    android:text="อัพโหลดหลักฐานการชำระเงิน"

                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="10dp"
                    android:textSize="20sp"
                    android:onClick="chooseFile"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="อัปโหลดไฟล์ขนาด xx MB"
                    android:textColor="#4F4F4F"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"

                    android:drawableTint="#00165C"
                    android:text="ถ้าไม่แนบหลักฐานการชำระเงินจะไม่สามารถทำรายการต่อไปได้"
                    android:textColor="#00165C"
                    android:textSize="17sp" />
            </LinearLayout>

            <Button
                android:id="@+id/updatepage"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="90dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#161D6F"
                android:letterSpacing="0"
                android:layout_marginHorizontal="10dp"
                android:text="update Page"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>